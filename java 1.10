<!DOCTYPE html>
<html>
<head>
	<title>Dice probability</title>
</head>
<body>
	<label>Enter the number of dice:</label>
	<input type="number" id="numDice">
	<label>Enter the sum of eyes:</label>
	<input type="number" id="sumEyes">
	<button onclick="calculateProbability()">Calculate</button>
	<p id="result"></p>
	<script>
		function calculateProbability() {
			const numDice = parseInt(document.getElementById("numDice").value);
			const sumEyes = parseInt(document.getElementById("sumEyes").value);
			const numTrials = 10000;
			let numSuccesses = 0;
			for (let i = 0; i < numTrials; i++) {
				let totalEyes = 0;
				for (let j = 0; j < numDice; j++) {
					totalEyes += Math.floor(Math.random() * 6) + 1;
				}
				if (totalEyes == sumEyes) {
					numSuccesses++;
				}
			}
			const probability = numSuccesses / numTrials * 100;
			const result = document.getElementById("result");
			result.innerHTML = "Probability to get sum " + sumEyes + " with " + numDice + " dice is " + probability.toFixed(2) + "%";
		}
	</script>
</body>
</html>
